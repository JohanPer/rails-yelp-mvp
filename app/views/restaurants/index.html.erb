<div class="container d-flex align-items-center flex-column">
<h1>All restaurants</h1>

<ul class="list-unstyled ms-2 d-flex align-items-center flex-column">
<% @restaurants.each do |restaurant| %>
  <li class="mt-3"><%= link_to restaurant.name, restaurant_path(restaurant), class: "text-decoration-none" %></li>
<% end %>
</ul>
<br>
<%= link_to "Create a new restaurant", new_restaurant_path, class: "btn btn-primary grow" %>
</div>
